{
    "moduleFileExtensions": [
        "ts",
        "tsx",
        "js"
    ],
    "transform": {
        ".tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.ts$",
    "moduleDirectories": [
        "src",
        "node_modules"
    ],
    "setupFiles": [
        "<rootDir>/test/setup.ts"
    ],
    "globals": {
        "ts-jest": {
            "useBabelrc": true,
            "tsConfigFile": "tsconfig.jest.json"
        }
    },

    "collectCoverageFrom": [
        "src/**/*.{ts,tsx}",
        "!src/mysqldump.d.ts"
    ],
    "coverageReporters": [
        "html",
        "text-summary"
    ],
    "coverageDirectory": "<rootDir>/coverage",
    "coveragePathIgnorePatterns": [
        "/node_modules/",
        "/__tests__/",
        "/interfaces/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "collectCoverage": true,
    "mapCoverage": true,
    "notify": true
}
