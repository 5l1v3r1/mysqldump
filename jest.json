{
    "collectCoverageFrom": [
        "src/**/*.{ts,tsx}"
    ],
    "coverageReporters": [
        "html",
        "text-summary"
    ],
    "collectCoverage": false,
    "coverageDirectory": "<rootDir>/coverage",
    "coveragePathIgnorePatterns": [
        "/node_modules/",
        "/__tests__/"
    ],
    "coverageThreshold": {
        "global": {
            "branches": 50,
            "functions": 80,
            "lines": 80,
            "statements": 80
        }
    },
    "mapCoverage": false,
    "moduleFileExtensions": [
        "ts",
        "tsx",
        "js"
    ],
    "transform": {
        ".tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.ts$",
    "moduleDirectories": [
        "src",
        "node_modules"
    ],
    "setupFiles": [
        "<rootDir>/test/setup.ts"
    ]
}
